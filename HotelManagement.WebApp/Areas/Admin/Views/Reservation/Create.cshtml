@model ReservationCreateViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Reservation";
}
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Create Reservation</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="BookingGuestId" class="font-weight-bold"></label>
                <select asp-for="BookingGuestId" asp-items="@(new SelectList(Model.Guests, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="BookingGuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="font-weight-bold"></label>
                <select asp-for="RoomId" asp-items="@(new SelectList(Model.Rooms, "Id", "Number"))" class="form-control"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartData" class="font-weight-bold"></label>
                <input asp-for="StartData" class="form-control" type="date" />
                <span asp-validation-for="StartData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndData" class="font-weight-bold"></label>
                <input asp-for="EndData" class="form-control" type="date" />
                <span asp-validation-for="EndData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="font-weight-bold"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<ReservationStatus>()" class="form-control">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Create
                </button>
            </div>

            <div class="d-flex justify-content-between mt-3 text-danger" asp-validation-summary="All">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
